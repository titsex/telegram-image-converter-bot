{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "paths": {
            "@handler/*": ["handlers/*"],
            "@class/*": ["classes/*"],
            "@types": ["types"],
            "@index": ["index"],
            "@utils": ["utils"]
        }
    },
    "include": ["./src/**/*"]
}
