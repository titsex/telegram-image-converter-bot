{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "outDir": "./build",
        "paths": {
            "@handler/*": ["./src/handlers/*"],
            "@class/*": ["./src/classes/*"],
            "@types": ["./src/types"],
            "@index": ["./src/index"],
            "@constants": ["./src/constants"],
            "@utils": ["./src/utils"]
        }
    },
    "include": ["./src/**/*"]
}
